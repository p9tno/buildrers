                    .blog__item
                        .blog__bg.bg(style="background-image: url('../../img/blog_"+item.bg+".jpg')")
                            ul.blog__hashtag
                                li
                                    span=item.hashtag

                        .blog__content
                            .blog__left
                                ul.blog__hashtag
                                    li
                                        span=item.hashtag
                                .blog__title
                                    span=item.title
                                .blog__excerpt
                                    span=item.excerpt

                            .blog__right
                                .blog__btn
                                    a.btn(href="#")
                                        span READ more
                                .blog__time
                                    i.icon_time
                                    span 5 min
                                .blog__date
                                    span=item.date

                        .blog__link
                            a(href="#") READ more





    // end blog


    // start pagination
    .pagination
        span.current 1
        a(href="#") 2
        span.dots ...
        a(href="#") 10
        a.next

    // end pagination
